<div class="d-flex justify-content-between align-item-center" > 
    <h1>Tweets</h1> 
    <%if Current.user.twitter_accounts.any? %> 
        <%= link_to "Schedule tweet", new_tweet_path, class: "btn btn-primary" %> 
    <%end%> 
</div>

<% if Current.user.twitter_accounts.none? %> 
    <%= link_to "Connect to your twitter account", "/auth/twitter", class: "btn btn-primary" %> 
<%end%> 

<%= render @tweets %> 