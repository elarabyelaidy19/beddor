<h1> forget password? </h1> 

<%= form_with url: password_reset_path do |form| %> 
    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "ahmed" %> 
    </div> 

    <div class="mb-3"> 
        <%= form.submit "reset password", class: "btn btn-primary" %>
    </div>
<% end %>  